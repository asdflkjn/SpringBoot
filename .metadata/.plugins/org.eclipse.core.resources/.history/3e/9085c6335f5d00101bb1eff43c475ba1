package com.example.persistence;

import java.util.List;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;

import com.example.domain.BoardVO;

public interface QueryAnnoRepository extends CrudRepository<BoardVO, Integer> {
	
	//------------------------
//	복잡한 쿼리
//	[1] JPQL
//	@Query("SELECT b "
//		+ "FROM BoardVO b " // BoardVO는 테이블이 아닌 클래스명
//		+ "WHERE b.title LIKE %?1% "
//		+ "ORDER BY b.seq DESC ") //sql문장이 아님 , seq는 변수명
//	List<BoardVO> queryAnno(String word);
	
//	[2] 네이티브 쿼리 진짜 sql문
	@Query(value= "SELECT * 			"
			+ "FROM BoardVO 			" 
			+ "WHERE title LIKE '%?1%' 	"
			+ "ORDER BY seq DESC 		"
			
			, nativeQuery = true) //sql문장이 아님 , seq는 변수명
	List<BoardVO> queryAnno(String word);
	
	
	
}
