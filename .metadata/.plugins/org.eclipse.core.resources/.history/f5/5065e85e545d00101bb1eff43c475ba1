package com.example.controller;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.util.Date;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;

import com.example.domain.BoardVO;
import com.example.persistence.QueryMethodRepository;

@Controller
public class QueryMethodController {

	@Autowired
	private QueryMethodRepository repo;
	
	@RequestMapping("/querymethod")
	public String sample(Model m) {
		
		// 제목이 1212인 검색
//		List<BoardVO> result = repo.findByTitle("1212");
		
		// 제목이 1212가 아닌 경우를 검색
//		List<BoardVO> result = repo.findByTitleNot("1212");

		// 제목은 'test23'이 아니거나 작성자가 'test'인 경우를 검색하고 싶을 때 
//		List<BoardVO> result = repo.findByTitleNotOrWriter("test23", "test");
		
//		List<BoardVO> result = repo.findByCnt(4);
//		List<BoardVO> result = repo.findByCntGreaterThan(4);
//		List<BoardVO> result = repo.findByCntGreaterThanEqual(4);
//		List<BoardVO> result = repo.findByCntLessThanEqual(4);
//		List<BoardVO> result = repo.findByRegdateIsNull();
//		List<BoardVO> result = repo.findByRegdateIsNotNull();
		// 날짜 문자열을 LocalDate로 파싱
		LocalDate localDate = LocalDate.parse("2025-07-10", DateTimeFormatter.ofPattern("yyyy-MM-dd"));

		// LocalDate를 java.sql.Date로 변환 (만약 JPA 엔티티가 java.sql.Date를 쓴다면)
		Date date = Date.valueOf(localDate);

		// 데이터 조회
		List<BoardVO> result = repo.findByRegdateLessThan(date);
		
		m.addAttribute("boardList", result);
		
		return "/board/getBoardList";
	}
	
}
